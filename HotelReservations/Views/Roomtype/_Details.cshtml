@model RoomType
@{
    ViewData["Title"] = "Details Room Type";
}

<div class="modal fade" id="detmodel_@Model.RoomTypeId" tabindex="-1" aria-labelledby="@Model.RoomTypeId" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="@Model.RoomTypeId">@ViewData["Title"]</h5>
                <button type="button" class="ms-auto btn-modal-close" data-bs-dismiss="modal" aria-label="Close"><i class='bx bx-plus'></i></button>
            </div>
            <div class="modal-body">
                <div class="form-container p-0" data-aos="fade-in">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="RoomTypeName" class="control-label"></label>
                                        <input value="@Model.RoomTypeName" class="form-control" disabled />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="BasePrice" class="control-label"></label>
                                        <input asp-for="BasePrice" class="form-control" disabled />
                                        <span asp-validation-for="BasePrice" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Beds" class="control-label"></label>
                                        <input asp-for="Beds" class="form-control" disabled />
                                        <span asp-validation-for="Beds" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="MaxOccupancy" class="control-label"></label>
                                        <input asp-for="MaxOccupancy" class="form-control" disabled />
                                        <span asp-validation-for="MaxOccupancy" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Amenities" class="control-label"></label>
                                        <textarea asp-for="Amenities" class="form-control" disabled></textarea>
                                        <span asp-validation-for="Amenities" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Description" class="control-label"></label>
                                        <textarea asp-for="Description" class="form-control" disabled></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group mb-3">
                                        <div class="form-check">
                                            <label asp-for="Status" class="form-check-label"></label>
                                            <input class="form-check-input" type="checkbox" disabled @(Model.Status.HasValue && Model.Status.Value ? "checked" : "") />
                                            <span asp-validation-for="Status" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="col-12">
                                <div class="form-group mb-2">
                                    <label asp-for="RoomTypeImage" class="control-label"></label>
                                    <input type="file" asp-for="RoomTypeImage" name="photo" class="form-control" disabled />
                                    <span asp-validation-for="RoomTypeImage" class="text-danger"></span>
                                </div>
                            </div>
                            <img src="~/@Model.RoomTypeImage" alt="Room Type Image" class="rounded-3 img-fluid" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <a class="px-2 py-1 text-primary" data-bs-toggle="modal" href="#model_@Model.RoomTypeId" data-bs-whatever role="button">
                        <i class="fa-solid fa-user-pen"></i>
                    </a> |
                    <a class="px-3 py-1 text-danger" data-bs-toggle="modal"
                       href="#delmodel_@Model.RoomTypeId"
                       data-bs-whatever role="button">
                        <i class="fa-solid fa-trash"></i>
                    </a> |
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>