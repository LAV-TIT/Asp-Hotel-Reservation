@model Rooms
@{
    Layout = "_Layout";
    ViewData["Title"] = "delete Room";
}
<div class="d-flex pb-1" style="justify-content:space-between; align-items:center;">
    <h4 style="color: #dc3545;display: flex;align-items: center;">
        <i class='fs-1 bx bxs-door-open icon'></i> @ViewData["Title"]
    </h4>
    <ul class="breadcrumbs ps-0">
        <li><a href="/">Home</a></li>
        <li class="divider">/</li>
        <li><a href="/Room/Delete" class="active">Delete</a></li>
    </ul>
</div>
<hr class="mt-0" />
<div class="form-container delete" data-aos="fade-in">
    <div class="row">
        <div class="col-lg-7">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="RoomName" class="control-label"></label>
                        <input asp-for="RoomName" class="form-control" disabled />
                        <span asp-validation-for="RoomName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <label asp-for="RoomTypeId" class="control-label">Room Type</label>
                    <select asp-for="RoomTypeId" class="form-control form-select" disabled
                            asp-items="ViewBag.roomTypes">
                        <option value="">-- Select RoomType --</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="RoomSize" class="control-label"></label>
                        <input asp-for="RoomSize" class="form-control" disabled />
                        <span asp-validation-for="RoomSize" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="Capacity" class="control-label"></label>
                        <input asp-for="Capacity" class="form-control" disabled />
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="PricePerNight" class="control-label"></label>
                        <input asp-for="PricePerNight" class="form-control" disabled />
                        <span asp-validation-for="PricePerNight" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="Floor" class="control-label"></label>
                        <input asp-for="Floor" class="form-control" disabled />
                        <span asp-validation-for="Floor" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="Amenities" class="control-label"></label>
                        <textarea asp-for="Amenities" class="form-control" disabled></textarea>
                        <span asp-validation-for="Amenities" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group mb-4">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" disabled></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="Status" class="form-check-label">Active</label>
                        <input asp-for="Status" class="form-check-input" disabled />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="col-12">
                <div class="mb-2">
                    <label asp-for="RoomImage" class="control-label"></label>
                    <input type="file" asp-for="RoomImage" name="photo" id="photo" class="form-control" disabled />
                    <span asp-validation-for="RoomImage" class="text-danger"></span>
                </div>
            </div>@if (Model.RoomImage is null)
            {
                <img style="width: 400px;" src="~/images/uploads.svg" id="imagePreview" alt="Room Image"
                     class="rounded-3 img-fluid" />
            }
            else
            {
                <img src="~/@Model.RoomImage" id="imagePreview" alt="Room Type Image" class="rounded-3 img-fluid" />
            }
        </div>
        <div class="col-12">
            <form asp-action="Delete">
                <input type="hidden" asp-for="RoomId" />
                <input type="submit" value="Confirm" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-warning">Cancel</a>
            </form>
        </div>
    </div>
</div>