@model Employee
@{
	ViewData["Title"] = "Delete Employee";
}

<div class="modal fade" id="delmodel_@Model.EmployeeId" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">@ViewData["Title"]</h5>
                <button type="button" class="ms-auto btn-modal-close" data-bs-dismiss="modal" aria-label="Close"><i class='bx bx-plus'></i></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this employee?</p>
            </div>
            <div class="modal-footer justify-content-center">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.EmployeeId" />
                    <button type="submit" class="btn btn-danger">Confirm</button>
                    <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

