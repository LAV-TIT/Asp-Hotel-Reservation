@model Department
@{
    ViewData["Title"] = "Delete Department";
}

<div class="modal fade" id="delmodel_@Model.DepartmentId" tabindex="-1" aria-labelledby="editModalLabel_@Model.DepartmentId" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel_@Model.DepartmentId">Delete Department</h5>
                <button type="button" class="ms-auto btn-modal-close" data-bs-dismiss="modal" aria-label="Close"><i class='bx bx-plus'></i></button>
            </div>
            <div class="modal-body">
                <h4>Are your sure you want to delete this record?</h4>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="DepartmentId" />
                    <input type="submit" value="Yes" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-warning">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
