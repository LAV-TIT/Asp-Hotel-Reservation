@model Department
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Department";
}
<h3><i class="fa-brands fa-delicious"></i> Edit Department</h3>
<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="DepartmentName" class="control-label"></label>
        <input asp-for="DepartmentName" class="form-control" />
        <span asp-validation-for="DepartmentName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="DepartmentId" />
    <div class="form-group">
        <input type="submit" value="Save Change" class="btn btn-success" /> |
        <a onclick="history.back()" class="btn btn-outline-primary">Back to List</a>
    </div>
</form>
