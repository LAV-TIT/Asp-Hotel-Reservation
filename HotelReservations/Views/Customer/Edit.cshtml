@model Customer
@{
	Layout = "_Layout";
	ViewData["Title"] = "Edit Customer";
}
<div class="d-flex pb-1" style="justify-content:space-between; align-items:center;">
	<h4 style="color: #8080f1;"><i class="fa-solid fa-user-pen"></i> Edit Customer</h4>
	<hr />
	<ul class="breadcrumbs ps-0">
		<li><a href="/">Home</a></li>
		<li class="divider">/</li>
		<li><a href="/Room" class="active"></a>edit</li>
	</ul>
</div>
<hr />
<div class="form-container">
	<form asp-action="Edit" method="post">
		<input type="hidden" asp-for="CustomerId" />
		<div class="row">
			<div class="col-6 col-md-4">
				<div class="form-group mb-4">
					<label asp-for="FirstName" class="control-label"></label>
					<input asp-for="FirstName" class="form-control" />
					<span asp-validation-for="FirstName" class="text-danger"></span>
				</div>
			</div>
			<div class="col-6 col-md-4">
				<div class="form-group mb-4">
					<label asp-for="LastName" class="control-label"></label>
					<input asp-for="LastName" class="form-control" />
					<span asp-validation-for="LastName" class="text-danger"></span>
				</div>
			</div>

			<div class="col-6 col-md-4">
				<div class="form-group mb-4">
					<label asp-for="IdCard" class="control-label"></label>
					<input asp-for="IdCard" class="form-control" />
					<span asp-validation-for="IdCard" class="text-danger"></span>
				</div>
			</div>

			<div class="col-6 col-md-4">
				<div class="form-group mb-4">
					<label asp-for="Gender" class="control-label"></label>
					<select asp-for="Gender" class="form-control​ form-select">
						<option value="">-- Select Gender --</option>
						<option value="Male">Male</option>
						<option value="Female">Female</option>
					</select>
					<span asp-validation-for="Gender" class="text-danger"></span>
				</div>
			</div>
			<div class="col-6 col-md-4">
				<div class="form-group mb-4">
					<label asp-for="Phone" class="control-label"></label>
					<input asp-for="Phone" class="form-control" />
					<span asp-validation-for="Phone" class="text-danger"></span>
				</div>
			</div>
			<div class="col-6 col-md-4">
				<div class="form-group mb-4">
					<label asp-for="Email" class="control-label"></label>
					<input asp-for="Email" class="form-control" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
			</div>
			<div class="col-6 col-md-4">
				<div class="form-group mb-4">
					<label asp-for="Income" class="control-label"></label>
					<input asp-for="Income" class="form-control" />
					<span asp-validation-for="Income" class="text-danger"></span>
				</div>
			</div>
			<div class="col-6 col-md-4">
				<div class="form-group mb-4">
					<label asp-for="Expense" class="control-label"></label>
					<input asp-for="Expense" class="form-control" />
					<span asp-validation-for="Expense" class="text-danger"></span>
				</div>
			</div>
			<div class="col-6 col-md-4">
				<div class="form-group mb-4">
					<label asp-for="PasswordNo" class="control-label"></label>
					<input asp-for="PasswordNo" class="form-control" />
					<span asp-validation-for="PasswordNo" class="text-danger"></span>
				</div>
			</div>
			<div class="col-6 col-md-4">
				<div class="form-group mb-4">
					<label asp-for="Address" class="control-label"></label>
					<input asp-for="Address" class="form-control" />
					<span asp-validation-for="Address" class="text-danger"></span>
				</div>
			</div>
			<div class="col-6 col-md-8">
				<div class="form-group mb-4">
					<label asp-for="Description" class="control-label"></label>
					<textarea asp-for="Description" class="form-control" rows="1"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
			</div>

		</div>

		<div class="form-group mb-4">
			<input type="submit" value="Save Change" class="btn btn-success" /> |
			<a asp-action="Index" class="btn btn-primary">Back to List</a>
		</div>
	</form>
</div>

