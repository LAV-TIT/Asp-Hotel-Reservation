@model Customer
@{
	Layout = "_Layout";
	ViewData["Title"] = "Delete Department";
}
<style>

	h4 {
		color: #dc3545;
		margin-bottom: 20px;
	}

	hr {
		border-top: 1px solid #ddd;
	}

	/* Container Styles */
	.p-md-4 {
		background-color: #fff;
		padding: 20px;
		border-radius: 8px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}

	/* Row and Column Styles */
	.row {
		display: flex;
		flex-wrap: wrap;
		gap: 20px;
	}

	.col-6, .col-md-4, .col-lg-4 {
		flex: 1 1 45%;
		margin-bottom: 15px;
	}

	/* Label and Value Styles */
	strong {
		color: #dc3545;
	}
</style>
<h4><i class="fa-solid fa-user-xmark"></i> Details Customer</h4>
<hr />

<div>
	<h3>Are you sure you want to delete this Customer?</h3>
	<div class="row">
		<div class="col-6 col-md- col-lg-4">
			<strong>Name</strong>
			@Model.FirstName @Model.LastName
		</div>
		<div class="col-6 col-md-4">
			<strong>@Html.DisplayNameFor(model => model.IdCard): </strong>
			@Model.IdCard
		</div>

		<div class="col-6 col-md-4">
			<strong>@Html.DisplayNameFor(model => model.Gender): </strong>
			@Model.Gender
		</div>
		<div class="col-6 col-md-4">
			<strong>@Html.DisplayNameFor(model => model.Phone): </strong>
			@Model.Phone
		</div>
		<div class="col-6 col-md-4">
			<strong>@Html.DisplayNameFor(model => model.Email): </strong>
			@Model.Email
		</div>
		<div class="col-6 col-md-4">
			<strong>@Html.DisplayNameFor(model => model.Income): </strong>
			@Model.Income
		</div>
		<div class="col-6 col-md-4">
			<strong>@Html.DisplayNameFor(model => model.Expense): </strong>
			@Model.Expense
		</div>
		<div class="col-6 col-md-4">
			<strong>@Html.DisplayNameFor(model => model.PasswordNo): </strong>
			@Model.PasswordNo
		</div>
		<div class="col-6 col-md-4">
			<strong>@Html.DisplayNameFor(model => model.Address): </strong>
			@Model.Address
		</div>
		<div class="col-6 col-md-4">
			<strong>@Html.DisplayNameFor(model => model.Description): </strong>
			@Model.Description
		</div>
	</div>
</div>
<div>
	<form asp-action="Delete">
		<input type="hidden" asp-for="CustomerId" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-action="Index" class="btn btn-secondary">Cancel</a>
	</form>
</div>



